{
  "builders": [
    {
      "access_key": "{{user `aws_access_key`}}",
      "ami_name": "delphix-rds-demo-target",
      "ami_regions": "{{user `destination_regions`}}",
      "associate_public_ip_address": true,
      "force_deregister": true,
      "instance_type": "t2.large",
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_size": 20,
          "volume_type": "gp2"
        }
      ],
      "name": "Packer-delphix-rds-demo-target",
      "region": "{{user `region`}}",
      "run_tags": {
        "dlpx:Expiration": "{{isotime \"2006-01-02\"}}",
        "dlpx:Owner": "{{user `dlpx:Owner`}}",
        "dlpx:Project": "{{user `dlpx:Project`}}"
      },
      "run_volume_tags": {
        "dlpx:Expiration": "{{isotime \"2006-01-02\"}}",
        "dlpx:Owner": "{{user `dlpx:Owner`}}",
        "dlpx:Project": "{{user `dlpx:Project`}}"
      },
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami_filter": {
        "filters": {
          "name": "CentOS Linux 7 x86_64 HVM EBS*"
        },
        "most_recent": true,
        "owners": [
          "679593333241"
        ]
      },
      "ssh_username": "centos",
      "subnet_id": "{{user `subnet_id`}}",
      "tags": {
        "dlpx:Expiration": "{{user `dlpx:Expiration`}}",
        "dlpx:Owner": "{{user `dlpx:Owner`}}",
        "dlpx:Project": "{{user `dlpx:Project`}}"
      },
      "type": "amazon-ebs",
      "vpc_id": "{{user `vpc_id`}}"
    }
  ],
  "post-processors": [],
  "provisioners": [
    {
      "inline": [
        "sudo yum update -y",
        "sudo yum install -y bind-utils",
        "curl -o /tmp/p13390677_112040_Linux-x86-64_1of7.zip {{user `oracle_binaries_root_url`}}/p13390677_112040_Linux-x86-64_1of7.zip",
        "curl -o /tmp/p13390677_112040_Linux-x86-64_2of7.zip {{user `oracle_binaries_root_url`}}/p13390677_112040_Linux-x86-64_2of7.zip",
        "curl -o delphix-engine-configurator https://s3-us-west-2.amazonaws.com/cto-playground/delphix-engine-configurator/linux64/delphix-engine-configurator",
        "chmod +x ./delphix-engine-configurator",
        "ls -lart /tmp"
      ],
      "type": "shell"
    },
    {
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False"
      ],
      "playbook_file": "ansible/oracle_install.yml",
      "type": "ansible",
      "user": "centos"
    },
    {
      "ansible_env_vars": [
        "ANSIBLE_HOST_KEY_CHECKING=False"
      ],
      "playbook_file": "ansible/rds_demo.yml",
      "type": "ansible",
      "user": "centos"
    },
    {
      "inline": [
        "sudo sed -i -e '/.*'`hostname -s`'.*/d' /etc/hosts"
      ],
      "type": "shell"
    },
    {
      "destination": "/tmp/emptydb",
      "source": "scripts/emptydb",
      "type": "file"
    },
    {
      "inline": [
        "sudo mv /tmp/emptydb /home/oracle/emptydb",
        "sudo chown -R oracle.oinstall /home/oracle/emptydb",
        "sudo chmod -R u+x /home/oracle/emptydb",
        "sudo su - oracle -c '/home/oracle/emptydb/EMPTY.sh delphixdb'"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "sudo rm -Rf /tmp/*"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "cat /dev/null > .ssh/authorized_keys"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "destination_regions": "{{env `AWS_DESTINATION_REGIONS`}}",
    "dlpx:Expiration": "{{env `AWS_EXPIRATION`}}",
    "dlpx:Owner": "{{env `AWS_OWNER`}}",
    "dlpx:Project": "{{env `AWS_PROJECT`}}",
    "oracle_binaries_root_url": "{{env `ORACLE_BINARIES_ROOT_URL`}}",
    "region": "{{env `AWS_BUILD_REGION`}}",
    "subnet_id": "{{env `AWS_SUBNET_ID`}}",
    "vpc_id": "{{env `AWS_VPC_ID`}}"
  }
}

